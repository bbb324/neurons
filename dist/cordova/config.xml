<?xml version='1.0' encoding='utf-8'?>
<widget id="com.makeblock.neuron" ios-CFBundleVersion="${(Build.BuildId)}" version="1.1.16" xmlns="http://www.w3.org/ns/widgets">
    <name>NeuronAPP</name>
    <description>
        Flow based programming with makeblock neuron.
    </description>
    <author email="john.xie@makeblock.com" href="http://makeblock.cc">
        Makeblock
    </author>
    <preference name="Orientation" value="landscape" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="18" />
    <content src="index.html" />
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon platform="android" qualifier="xhdpi" src="res/android/neuron-xhdpi.png" />
        <icon platform="android" qualifier="xxhdpi" src="res/android/neuron-xxhdpi.png" />
        <splash platform="android" qualifier="ldpi" src="res/screen/android/landscape-LDPI.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/ios/Icon-60@3x.png" width="180" />
        <icon height="60" src="res/ios/Icon-60.png" width="60" />
        <icon height="120" src="res/ios/Icon-60@2x.png" width="120" />
        <icon height="76" src="res/ios/Icon-76.png" width="76" />
        <icon height="152" src="res/ios/Icon-76@2x.png" width="152" />
        <icon height="40" src="res/ios/Icon-Spotlight-40.png" width="40" />
        <icon height="80" src="res/ios/Icon-Spotlight-40@2x.png" width="80" />
        <icon height="57" src="res/ios/Icon.png" width="57" />
        <icon height="114" src="res/ios/Icon@2x.png" width="114" />
        <icon height="72" src="res/ios/Icon-72.png" width="72" />
        <icon height="144" src="res/ios/Icon-72@2x.png" width="144" />
        <icon height="29" src="res/ios/Icon-Small.png" width="29" />
        <icon height="58" src="res/ios/Icon-Small@2x.png" width="58" />
        <icon height="50" src="res/ios/Icon-Small-50.png" width="50" />
        <icon height="100" src="res/ios/Icon-Small-50@2x.png" width="100" />
        <splash height="768" src="res/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1242" src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2208" />
        <splash height="750" src="res/screen/ios/Default-Landscape~ipad.png" width="1334" />
        <splash src="res/screen/ios/Default-Landscape~ipad.png" />
    </platform>
    <engine name="ios" spec="~4.2.1" />
    <plugin name="com.pylonproducts.wifiwizard" spec="~0.2.11" />
    <plugin name="cordova-plugin-appversion" spec="~1.0.0" />
    <plugin name="cordova-plugin-ble-central" spec="~1.1.4">
        <variable name="BLUETOOTH_USAGE_DESCRIPTION" value="need to connect to Neuron Blocks" />
    </plugin>
    <plugin name="cordova-plugin-chrome-apps-sockets-tcp" spec="~1.3.7" />
    <plugin name="cordova-plugin-chrome-apps-sockets-udp" spec="~1.3.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.7" />
    <plugin name="cordova-plugin-crosswalk-webview" spec="~2.3.0" />
    <plugin name="cordova-plugin-device" spec="~1.1.2" />
    <plugin name="cordova-plugin-google-analytics" spec="~1.8.2" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.1" />
    <plugin name="cordova-plugin-splashscreen" spec="~4.0.3" />
    <plugin name="cordova-plugin-statusbar" spec="~2.2.3" />
    <plugin name="cordova-plugin-statusbar-hide-on-startup" spec="git+https://github.com/SevaSafris/cordova-plugin-statusbar-hide-on-startup.git" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <plugin name="ionic-plugin-keyboard" spec="~2.2.1" />
</widget>
